{
  "name": "@nodecfdi/adonisjs-sat-catalogs",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.15.1",
  "description": "A simple wrapper from phpcfdi/resources-sat-catalogs for adonisjs",
  "author": "Fernando Isidro <luffynando@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/nodecfdi/adonisjs-sat-catalogs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nodecfdi/adonisjs-sat-catalogs.git"
  },
  "bugs": {
    "url": "https://github.com/nodecfdi/adonisjs-sat-catalogs/issues"
  },
  "keywords": [
    "adonisjs",
    "adonis",
    "sat",
    "catalogs",
    "phpcfdi",
    "resources",
    "wrapper"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./commands": "./dist/commands/main.js",
    "./commands/create_or_update_sat_catalogs_db": "./dist/commands/create_or_update_sat_catalogs_db.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.19"
  },
  "scripts": {
    "prepare": "is-in-ci || husky",
    "prebuild": "pnpm tool:code",
    "build": "tsdown --clean --dts",
    "postbuild": "pnpm index:commands && pnpm gen:docs && git add docs/*",
    "gen:docs": "typedoc",
    "index:commands": "adonis-kit index dist/commands",
    "changelog": "auto-changelog -p && git add CHANGELOG.md",
    "release": "np",
    "version": "pnpm build && pnpm changelog",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "typecheck": "tsc --noEmit",
    "test:run": "node --inspect --import ts-node-maintained/register/esm --enable-source-maps bin/test.ts",
    "test:coverage": "c8 pnpm test:run",
    "tool:code": "pnpm lint:check && pnpm typecheck",
    "tool:build": "pnpm tool:code && pnpm test:run"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.17.2",
    "@adonisjs/lucid": "^21.6.0"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "del": "^8.0.0",
    "unzipper": "^0.12.3"
  },
  "devDependencies": {
    "@adonisjs/ace": "^13.3.0",
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/core": "^6.17.2",
    "@adonisjs/lucid": "^21.6.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eienjs/eslint-config": "^1.2.2",
    "@japa/assert": "^4.1.1",
    "@japa/file-system": "^2.3.2",
    "@japa/runner": "^4.4.0",
    "@swc/core": "^1.13.5",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.18.1",
    "@types/unzipper": "^0.10.11",
    "auto-changelog": "^2.5.0",
    "c8": "^10.1.3",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "is-in-ci": "^2.0.0",
    "luxon": "^3.7.1",
    "np": "^10.2.0",
    "ts-node-maintained": "^10.9.6",
    "tsdown": "^0.14.2",
    "typedoc": "^0.28.12",
    "typedoc-github-theme": "^0.3.1",
    "typescript": "^5.9.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "better-sqlite3",
      "esbuild"
    ]
  },
  "c8": {
    "all": true,
    "reporter": [
      "text",
      "lcov"
    ],
    "include": [
      "src/**"
    ],
    "exclude": [
      "bin/**",
      "tests/**"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "typedocOptions": {
    "plugin": [
      "typedoc-github-theme"
    ],
    "entryPoints": [
      "./index.ts",
      "./commands/create_or_update_sat_catalogs_db.ts"
    ],
    "entryPointStrategy": "expand",
    "out": "./docs",
    "externalSymbolLinkMappings": {
      "@adonisjs/ace": { "CommandMetaData": "#" }
    }
  },
  "auto-changelog": {
    "template": "keepachangelog",
    "hideCredit": true,
    "commitUrl": "https://github.com/nodecfdi/adonisjs-sat-catalogs/commit/{id}",
    "issueUrl": "https://github.com/nodecfdi/adonisjs-sat-catalogs/issues/{id}",
    "mergeUrl": "https://github.com/nodecfdi/adonisjs-sat-catalogs/pull/{id}",
    "compareUrl": "https://github.com/nodecfdi/adonisjs-sat-catalogs/compare/{from}...{to}"
  },
  "np": {
    "message": "chore(release): :tada: %s",
    "tag": "latest",
    "branch": "main",
    "testScript": "test:run"
  },
  "tsdown": {
    "entry": [
      "index.ts",
      "commands/create_or_update_sat_catalogs_db.ts"
    ],
    "shims": true,
    "format": [
      "esm"
    ],
    "target": "esnext",
    "platform": "node",
    "unbundle": true
  }
}
