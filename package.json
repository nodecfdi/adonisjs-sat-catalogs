{
  "name": "@nodecfdi/adonisjs-sat-catalogs",
  "type": "module",
  "version": "1.1.0",
  "packageManager": "pnpm@10.26.2",
  "description": "A simple wrapper from phpcfdi/resources-sat-catalogs for adonisjs",
  "author": "Fernando Isidro <luffynando@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/nodecfdi/adonisjs-sat-catalogs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nodecfdi/adonisjs-sat-catalogs.git"
  },
  "bugs": {
    "url": "https://github.com/nodecfdi/adonisjs-sat-catalogs/issues"
  },
  "keywords": [
    "adonisjs",
    "adonis",
    "adonis-framework",
    "sat",
    "catalogs",
    "phpcfdi",
    "resources",
    "wrapper"
  ],
  "exports": {
    ".": "./build/index.mjs",
    "./commands/create_or_update_sat_catalogs_db": "./build/commands/create_or_update_sat_catalogs_db.mjs",
    "./package.json": "./package.json",
    "./commands": "./build/commands/main.js"
  },
  "main": "./build/index.mjs",
  "module": "./build/index.mjs",
  "types": "./build/index.d.mts",
  "files": [
    "build"
  ],
  "engines": {
    "node": ">=20.19"
  },
  "scripts": {
    "prepare": "is-in-ci || husky",
    "prebuild": "pnpm run tool:code",
    "build": "tsdown --clean --dts",
    "postbuild": "pnpm run index:commands && pnpm run gen:docs && git add docs/*",
    "gen:docs": "typedoc",
    "index:commands": "adonis-kit index build/commands",
    "changelog": "auto-changelog -p && git add CHANGELOG.md",
    "release": "np",
    "version": "pnpm run build && pnpm run changelog",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "typecheck": "tsc --noEmit",
    "test:run": "node --import ts-node-maintained/register/esm --enable-source-maps bin/test.ts",
    "test:coverage": "c8 node --inspect --import ts-node-maintained/register/esm --enable-source-maps bin/test.ts",
    "tool:code": "pnpm run lint:check && pnpm run typecheck",
    "tool:build": "pnpm run tool:code && pnpm run test:run"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.19.1",
    "@adonisjs/lucid": "^21.8.1"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "del": "^8.0.1",
    "unzipper": "^0.12.3"
  },
  "devDependencies": {
    "@adonisjs/ace": "^13.4.0",
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/core": "^6.19.1",
    "@adonisjs/lucid": "^21.8.1",
    "@adonisjs/tsconfig": "^1.4.1",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eienjs/eslint-config": "^1.8.2",
    "@japa/assert": "^4.2.0",
    "@japa/file-system": "^3.0.0",
    "@japa/runner": "^4.4.0",
    "@swc/core": "^1.15.7",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.10.4",
    "@types/unzipper": "^0.10.11",
    "auto-changelog": "^2.5.0",
    "c8": "^10.1.3",
    "eslint": "^9.39.2",
    "eslint-plugin-erasable-syntax-only": "^0.4.0",
    "husky": "^9.1.7",
    "is-in-ci": "^2.0.0",
    "luxon": "^3.7.2",
    "np": "^10.2.0",
    "ts-node-maintained": "^10.9.6",
    "tsdown": "^0.18.3",
    "typedoc": "^0.28.15",
    "typedoc-github-theme": "^0.3.1",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "better-sqlite3",
      "esbuild"
    ]
  },
  "c8": {
    "all": true,
    "reporter": [
      "text",
      "lcov"
    ],
    "include": [
      "src/**"
    ],
    "exclude": [
      "bin/**",
      "tests/**"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "typedocOptions": {
    "plugin": [
      "typedoc-github-theme"
    ],
    "entryPoints": [
      "./index.ts",
      "./commands/create_or_update_sat_catalogs_db.ts"
    ],
    "entryPointStrategy": "expand",
    "out": "./docs",
    "externalSymbolLinkMappings": {
      "@adonisjs/ace": {
        "CommandMetaData": "#"
      }
    }
  },
  "auto-changelog": {
    "template": "keepachangelog",
    "hideCredit": true
  },
  "np": {
    "message": "chore(release): :tada: %s",
    "tag": "latest",
    "branch": "main",
    "testScript": "test:run"
  }
}
