{
  "name": "@nodecfdi/adonisjs-sat-catalogs",
  "description": "A simple wrapper from phpcfdi/resources-sat-catalogs for adonisjs",
  "version": "0.0.0",
  "type": "module",
  "module": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "build",
    "!build/bin",
    "!build/tests"
  ],
  "exports": {
    ".": "./build/index.js",
    "./types": "./build/src/types.js"
  },
  "scripts": {
    "prepare": "is-in-ci || husky",
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build --up 1",
    "changelog": "auto-changelog -p && git add CHANGELOG.md",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "node --import ts-node-maintained/register/esm --enable-source-maps bin/test.ts",
    "test:coverage": "c8 pnpm run test",
    "tool:code": "pnpm run lint:check && pnpm run format:check && pnpm run typecheck",
    "tool:build": "pnpm run tool:code && pnpm run test",
    "prebuild": "pnpm run tool:code && pnpm run clean",
    "build": "tsup-node --metafile && tsc --emitDeclarationOnly --declaration",
    "postbuild": "pnpm run copy:templates",
    "release": "np",
    "version": "pnpm run build && pnpm run changelog"
  },
  "devDependencies": {
    "@adonisjs/core": "^6.17.2",
    "@adonisjs/lucid": "^21.6.0",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@nodecfdi/eslint-config": "^2.4.4",
    "@nodecfdi/prettier-config": "^1.4.1",
    "@nodecfdi/tsconfig": "^1.7.4",
    "@swc/core": "^1.11.1",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.13.5",
    "auto-changelog": "^2.5.0",
    "c8": "^10.1.3",
    "del-cli": "^6.0.0",
    "eslint": "^9.21.0",
    "husky": "^9.1.7",
    "is-in-ci": "^1.0.0",
    "luxon": "^3.5.0",
    "native-copyfiles": "^0.3.2",
    "np": "^10.2.0",
    "prettier": "^3.5.2",
    "ts-node-maintained": "^10.9.5",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.17.2",
    "@adonisjs/lucid": "^21.6.0",
    "@types/luxon": "^3.4.2",
    "luxon": "^3.5.0"
  },
  "peerDependenciesMeta": {
    "@types/luxon": {
      "optional": true
    }
  },
  "author": "Fernando Isidro <luffynando@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/nodecfdi/adonisjs-sat-catalogs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nodecfdi/adonisjs-sat-catalogs.git"
  },
  "bugs": {
    "url": "https://github.com/nodecfdi/adonisjs-sat-catalogs/issues"
  },
  "keywords": [
    "adonisjs",
    "adonis",
    "sat",
    "catalogs",
    "phpcfdi",
    "resources",
    "wrapper"
  ],
  "engines": {
    "node": ">=20.6.0"
  },
  "packageManager": "pnpm@10.5.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "esbuild"
    ]
  },
  "c8": {
    "reporter": [
      "text",
      "lcov"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": "@nodecfdi/prettier-config/pkg",
  "publishConfig": {
    "provenance": true,
    "access": "public",
    "tag": "latest"
  },
  "auto-changelog": {
    "template": "keepachangelog",
    "hideCredit": true
  },
  "np": {
    "message": "chore(release): :tada: %s",
    "tag": "latest",
    "branch": "main",
    "testScript": "test"
  },
  "tsup": {
    "entry": [
      "index.ts",
      "src/types.ts"
    ],
    "outDir": "./build",
    "clean": true,
    "format": "esm",
    "dts": false,
    "sourcemap": true,
    "target": "esnext"
  }
}
